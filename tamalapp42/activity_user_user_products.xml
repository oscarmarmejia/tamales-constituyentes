<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/hueso"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mejia.oscar.tamalapp42.UserUserProductsActivity">

    <RelativeLayout
        android:id="@+id/r3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:layout_alignParentTop="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Los productos que pediste están en camino."
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:id="@+id/test11"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/test11"
            android:id="@+id/texto_info1"
            android:text=" Comunícate al teléfono (442)2062912 para cualqueir duda o aclaración."
            android:textSize="15dp"

            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/texto_info1"
            android:id="@+id/id_pedido"
android:maxLength="26"

            android:gravity="center"
            android:text="id de tu pedido:"
            android:textSize="15dp"

            />

    </RelativeLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/products_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/r3">
    </androidx.recyclerview.widget.RecyclerView>

</RelativeLayout>